@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header">
                <h3 class="text-center font-weight-light my-4">Şifremi Unuttum</h3>
            </div>
            <div class="card-body">
                <div id="fpMessage" class="alert d-none" role="alert"></div>

                <form id="forgotForm">
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        <input class="form-control" id="fpEmail" type="email" placeholder="E-posta" required />
                        <label for="fpEmail">E-posta</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="fpIdentity" type="text" placeholder="TCKN/VKN" required />
                        <label for="fpIdentity">TCKN/VKN</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="fpName" type="text" placeholder="Ad Soyad" required />
                        <label for="fpName">Ad Soyad</label>
                    </div>

                    <div class="form-floating mb-3 position-relative">
                        <input class="form-control" id="fpNewPassword" type="password" placeholder="Yeni Şifre" required />
                        <label for="fpNewPassword">Yeni Şifre</label>
                        <button type="button" id="toggleFpPassword" class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2" tabindex="-1" aria-label="Şifreyi göster/gizle">
                            <span id="toggleFpIcon" class="bi bi-eye"></span>
                        </button>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a href="/Login">Girişe dön</a>
                        <button id="fpButton" type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const form = document.getElementById('forgotForm');
            const btn = document.getElementById('fpButton');
            const msg = document.getElementById('fpMessage');
            const fpPwd = document.getElementById('fpNewPassword');
            const fpToggle = document.getElementById('toggleFpPassword');
            const fpIcon = document.getElementById('toggleFpIcon');

            if (fpToggle && fpPwd) {
                fpToggle.addEventListener('click', function () {
                    const isPwd = fpPwd.getAttribute('type') === 'password';
                    fpPwd.setAttribute('type', isPwd ? 'text' : 'password');
                    if (fpIcon) fpIcon.className = isPwd ? 'bi bi-eye-slash' : 'bi bi-eye';
                });
                fpToggle.addEventListener('mousedown', function () { fpPwd.setAttribute('type', 'text'); });
                fpToggle.addEventListener('mouseup', function () { fpPwd.setAttribute('type', 'password'); });
                fpToggle.addEventListener('mouseleave', function () { fpPwd.setAttribute('type', 'password'); });
            }

            function showMsg(text, type) {
                msg.className = 'alert alert-' + type;
                msg.textContent = text;
                msg.classList.remove('d-none');
            }

            form.addEventListener('submit', async function (e) {
                e.preventDefault();
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const payload = {
                    email: document.getElementById('fpEmail').value,
                    identityNumber: document.getElementById('fpIdentity').value,
                    fullName: document.getElementById('fpName').value,
                    newPassword: document.getElementById('fpNewPassword').value
                };
                btn.disabled = true;
                btn.textContent = 'İşleniyor...';
                try {
                    const res = await fetch('/Login/ForgotPasswordSubmit', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                        body: JSON.stringify(payload)
                    });
                    const data = await res.json();
                    if (res.ok && data.success) {
                        showMsg(data.message || 'İşlem başarılı', 'success');
                    } else {
                        showMsg(data.message || 'İşlem başarısız', 'danger');
                    }
                } catch (err) {
                    showMsg('Sunucu hatası', 'danger');
                } finally {
                    btn.disabled = false;
                    btn.textContent = 'Şifreyi Sıfırla';
                }
            });
        })();
    </script>
}